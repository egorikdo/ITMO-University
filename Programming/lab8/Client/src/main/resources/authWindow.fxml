<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/11.0.14-internal"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.AuthorisationController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#ruButtonOnClick" text="RU" />
        <Button onAction="#trButtonOnClick" text="TR" />
        <Button onAction="#caButtonOnClick" text="CA" />
        <Button onAction="#esButtonOnClick" text="ES" />
    </HBox>
   <Label fx:id="welcomeLabel" text="Welcome!" />

    <TextField fx:id="loginField" promptText="enter login" />
    <PasswordField fx:id="passwordField" promptText="enter password" />

    <HBox spacing="10">
        <Button fx:id="loginButton" defaultButton="true" onAction="#loginButtonOnClick" text="Log in" />
        <Button fx:id="registerButton" onAction="#registerButtonOnClick" text="Registration" />
    </HBox>
</VBox>
